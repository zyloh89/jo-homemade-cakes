{
  "name": "mern",
  "version": "1.0.0",
  "description": "Mern Demo",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.1.0",
    "nodemon": "^1.18.7"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^0.19.2",
    "bcrypt": "^5.0.0",
    "bootstrap": "^4.5.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.3",
    "faker": "^4.1.0",
    "firebase": "^7.17.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "mdbreact": "^4.27.0",
    "moment": "^2.27.0",
    "mongoose": "^5.9.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-images": "^1.1.7",
    "react-moment": "^0.9.7",
    "react-photo-gallery": "^8.0.0",
    "react-router-dom": "^5.2.0"
  }
}
